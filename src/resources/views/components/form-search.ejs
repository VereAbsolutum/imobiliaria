<form class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4">
  <div class="flex items-center justify-between">
    <div class="flex items-center">
      <label
        for="property-type"
        class="block text-sm font-medium text-gray-700 mr-4"
        >Tipo de Im√≥vel:</label
      >
      <select
        id="property-type"
        class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring focus:ring-blue-500"
      >
        <option value="">Selecione</option>
        <option value="apartamento">Apartamento</option>
        <option value="casa">Casa</option>
        <option value="terreno">Terreno</option>
      </select>
    </div>

    <div class="flex items-center mx-4">
      <label for="city" class="block text-sm font-medium text-gray-700 mr-4"
        >Cidade:</label
      >
      <input
        type="text"
        id="city"
        placeholder="Cidade"
        class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring focus:ring-blue-500"
      />
    </div>

    <div class="flex items-center">
      <label for="bedrooms" class="block text-sm font-medium text-gray-700 mr-4"
        >Quartos:</label
      >
      <select
        id="bedrooms"
        class="mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring focus:ring-blue-500"
      >
        <option value="">Selecione</option>
        <option value="1">1 Quarto</option>
        <option value="2">2 Quartos</option>
        <option value="3">3 Quartos</option>
        <option value="4">4 Quartos ou mais</option>
      </select>
    </div>

    <div class="flex items-center ml-4">
      <button type="submit" class="bg-blue-500 text-white rounded-md py-2 px-4">
        Buscar
      </button>
    </div>
  </div>
</form>
