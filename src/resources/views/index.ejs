<div class="container mx-auto p-4 bg-white">
    <h1 class="text-center text-2xl font-bold mb-4">A Certeza do Melhor Negócio!</h1>

    <div class="flex flex-wrap justify-between mb-4">
        <button class="bg-blue-500 text-white py-2 px-4 rounded uppercase active">VENDAS</button>
        <button class="bg-gray-300 py-2 px-4 rounded uppercase">Locações</button>
        <button class="bg-gray-300 py-2 px-4 rounded uppercase">CÓDIGO OU NOME</button>
    </div>

    <h3 class="flex items-center text-lg mb-2">
        <i class="fa fa-search mr-2" aria-hidden="true"></i>Buscar Imóveis
    </h3>

    <div class="grid grid-cols-1 md:grid-cols-6 gap-4">
        <div class="col-span-2">
            <select class="w-full border rounded p-2">
                <option value="comprar-imoveis">Vendas</option>
                <option value="alugar-imoveis">Locações</option>
            </select>
        </div>
        <div class="col-span-2">
            <select class="w-full border rounded p-2">
                <option value="0" disabled selected>Tipo do Imóvel</option>
                <option value="1">Apartamentos</option>
                <option value="10">Casas</option>
                <option value="20">Comercial</option>
                <option value="30">Terrenos</option>
            </select>
        </div>

        <div class="col-span-2">
            <div class="flex flex-col">
                <label class="mb-1">Dormitórios</label>
                <div class="flex items-center">
                    <input type="checkbox" class="mr-2" value="1"> 01 dormitório
                </div>
                <div class="flex items-center">
                    <input type="checkbox" class="mr-2" value="2"> 02 dormitórios
                </div>
                <div class="flex items-center">
                    <input type="checkbox" class="mr-2" value="3"> 03 dormitórios
                </div>
                <div class="flex items-center">
                    <input type="checkbox" class="mr-2" value="4"> 04 dormitórios
                </div>
                <div class="flex items-center">
                    <input type="checkbox" class="mr-2" value="5"> 05 ou + dormitórios
                </div>
            </div>
        </div>

        <div class="col-span-2">
            <div class="flex flex-col">
                <label class="mb-1">Suítes</label>
                <div class="flex items-center">
                    <input type="checkbox" class="mr-2" value="11"> 01 suíte
                </div>
                <div class="flex items-center">
                    <input type="checkbox" class="mr-2" value="12"> 02 suítes
                </div>
                <div class="flex items-center">
                    <input type="checkbox" class="mr-2" value="13"> 03 suítes
                </div>
                <div class="flex items-center">
                    <input type="checkbox" class="mr-2" value="14"> 04 suítes
                </div>
                <div class="flex items-center">
                    <input type="checkbox" class="mr-2" value="15"> 05 ou + suítes
                </div>
            </div>
        </div>

        <div class="col-span-2">
            <input type="text" placeholder="Buscar por código ou nome" class="w-full border rounded p-2" />
            <button class="bg-blue-500 text-white py-2 px-4 rounded mt-2">BUSCAR</button>
        </div>
    </div>
</div>
